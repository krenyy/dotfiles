[settings]
pseudo-transparency = true

[bar/main]

width = 100%
height = 18
offset-y = 0
offset-x = 0

border-top-size = 5
border-bottom-size = 0
border-right-size = 5
border-left-size = 5

bottom = false
wm-restack = bspwm
enable-ipc = true
override-redirect = false

font-0 = Jetbrains Mono Nerd Font:size=12;2

background = #00000000
foreground = #ffffffff
border-color = #00000000

fixed-center = true
padding-left = 1
padding-right = 1
module-margin = 2

modules-left = cpu memory win10vm network torify
modules-center = bspwm
modules-right = keyboard weather datetime

tray-position = none
tray-detached = true

locale = cs_CZ.UTF8





[module/win10vm]
type = custom/script
interval = 2

exec = ~/.config/polybar/modules/win10vm.sh



[module/cpuclock]
type = custom/script
interval = 2

exec = ~/.config/polybar/modules/cpuclock.sh



[module/keyboard]
type = internal/xkeyboard

blacklist-0 = num lock
blacklist-1 = scroll lock

format = <label-indicator>  <label-layout>

indicator-icon-0 = caps lock;; 

label-indicator-on = "%icon% "



[module/weather]
type = custom/script
interval = 300

exec = ~/.config/polybar/modules/forecast.py

click-left = alacritty -e ~/scripts/wttrin.sh &


[module/bspwm]
type = internal/bspwm

pin-workspaces = true
enable-click = false
enable-scroll = true

label-focused-foreground = #FFFFFF
label-occupied-foreground = #A53841
label-empty-foreground = #5a6f72
label-urgent-foreground = #FFA500 

label-separator = " "


[module/datetime]
type = internal/date

interval = 1

date =   %A %e. %B %Y - %H:%M


[module/cpu]
type = internal/cpu
interval = 2

format = ﬙  <label>



[module/memory]
type = custom/script
interval = 2

exec = free --mebi | grep Mem | awk '{printf "  %0.2f GiB", ($3+$5)/1024}'


[module/network]
type = internal/network
interval = 3

interface = br0

label-connected = ""
label-disconnected =   Disconnected


[module/torify]
type = custom/ipc

hook-0 = pgrep -x tor > /dev/null && polybar-msg hook torify 4 || echo "﨩 Off"
hook-1 = echo "﨩 Shutting down..."
hook-2 = echo "﨩 Retrieving IP..."
hook-3 = INFO=$(curl -s http://ip-api.com/json/) && echo "﨩 $(echo $INFO | jq -r '.countryCode') $(echo $INFO | jq -r '.query')"

initial = 1

click-left = polybar-msg hook torify 3 && sudo archtorify -t || sudo archtorify -r && polybar-msg hook torify 4
click-middle = pgrep -x tor > /dev/null && polybar-msg hook torify 2 && sudo archtorify -c; polybar-msg hook torify 1

