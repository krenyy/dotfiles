colors:
  primary:
    background: '{background}'
    foreground: '{foreground}'

window:
  padding:
    x: 10
    y: 10

  dynamic_title: true
  dynamic_padding: true


font:
  normal:
    family: Fira Code Retina

  size: 11.0


background_opacity: 0.95


selection:
  save_to_clipboard: true


cursor:
  style: Block
  unfocused_hollow: true

live_config_reload: true


shell:
  program: /bin/zsh

